<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C81111"
    app:cardBackgroundColor="#F6F3F3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_V"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/ly_2_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="228dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_eliminar_dato"
                    android:layout_width="71dp"
                    android:layout_height="56dp"
                    android:backgroundTint="#EF1A1A"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_delete" />

                <ImageView
                    android:id="@+id/btn_editar_dato"
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_edit" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/etiqueta_placa" />

            <TextView
                android:id="@+id/txt_placa_wiew"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:text="@string/text_view_placa" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/etiqueta_conductor" />

            <TextView
                android:id="@+id/txt_conductor_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_view_NombreDelConductor" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/etiqueta_descripcion" />

            <TextView
                android:id="@+id/txt_descripcion_view"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="@string/text_Descripcion" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>